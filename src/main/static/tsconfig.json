{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2020", "dom", "esnext"],
    "allowJs": true,
    "jsx": "react-jsx",
    "noEmit": false,
    "strict": true, // Enable strict type checking (recommended)
    "esModuleInterop": true, // Important for module compatibility
    "moduleResolution": "node", // Important for module resolution
    "baseUrl": "./src", // Optional: For easier relative imports
    "paths": { // Optional: For path aliases
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"]
    }
  },
}